{
  "tasks": {
    "build": "cd frontend && pnpm build",
    "deploy": "npx supabase functions deploy",
    "db:push": "npx supabase db push",
    "db:gen-types": "npx supabase gen types typescript --project-id hfzyljzxjrhvenwjyxlo > supabase/db/database.types.ts",
    "db:unsafe-nuke": "npx supabase db reset --linked hfzyljzxjrhvenwjyxlo",
    "db:baseline": "npx supabase db dump --local --schema public,auth,storage --exclude-table-data='*' > supabase/migrations/00000000000000_baseline.sql",
    "dev:frontend": {
      "command": "cd frontend && pnpm dev"
    },
    "dev:backend": {
      "command": "npx supabase functions serve --env-file ./supabase/.env.local"
    },
    "dev": {
      "command": "deno run -A npm:concurrently \"deno task dev:frontend\" \"deno task dev:backend\""
    }
  },
  "lint": {
    "rules": {
      "exclude": ["no-import-prefix"]
    }
  }
}
